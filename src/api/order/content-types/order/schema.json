{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Orders"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "customer_name": {
      "type": "string"
    },
    "customer_email": {
      "type": "email"
    },
    "customer_phone": {
      "type": "string"
    },
    "payment_method": {
      "type": "string",
      "default": "cash"
    },
    "order_status": {
      "type": "enumeration",
      "default": "pending",
      "enum": [
        "pending",
        "completed",
        "cancelled"
      ]
    },
    "customer_address": {
      "type": "text"
    },
    "total_amount": {
      "type": "decimal"
    },
    "cart_items": {
      "type": "component",
      "component": "order.cart-item",
      "repeatable": true
    }
  }
}
